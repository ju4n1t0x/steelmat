---
const { id } = Astro.props;
---

<div
  id={id}
  tabindex="-1"
  aria-hidden="true"
  class="hidden fixed inset-0 z-50 flex items-center justify-center overflow-y-auto overflow-x-hidden "
>
  <div class="relative w-full max-w-lg p-6">
    <div class="relative bg-white rounded-lg shadow text-center p-10">

      <!-- Botón cerrar -->
      <button
        type="button"
        class="absolute top-4 right-4 text-gray-400 hover:text-gray-600"
        data-modal-hide={id}
        aria-label="Cerrar"
      >
        ✕
      </button>

      <!-- Contenido -->
      <h3 class="text-2xl font-semibold text-gray-700 mb-3">
        ¡Muchas gracias!
      </h3>

      <p class="text-gray-600 mb-8">
        Pronto nos pondremos en contacto.
      </p>

      <a
        href="/"
        class="inline-flex items-center justify-center text-white bg-orange-500 hover:bg-orange-600 rounded-lg px-6 py-3 text-base font-medium transition"
      >
        Volver a la Home
      </a>

    </div>
  </div>
</div>
