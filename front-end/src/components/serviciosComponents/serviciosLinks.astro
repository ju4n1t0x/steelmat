<section
    class="relative w-full min-h-screen flex flex-col items-center pt-32 pb-20"
>
    <div class="flex flex-col items-center w-full px-6">
        
        <div class="flex flex-col justify-center items-center text-[#545151] pt-10">
            <h1 class="text-4xl md:text-5xl font-extrabold leading-tight text-center">  
                ¿Cómo es la vivienda<br />de tus sueños?
            </h1>
            <h2 class="text-sm md:text-base leading-tight text-center pt-5 text-gray-500">
                Elegí la opción que mas te interesa
            </h2>
        </div>
        

        <div class="flex flex-col w-[700px] w-max-[700px] h-auto pt-12">
            <!--Llave en mano -->
            <div class="llave-en-mano pt-20">
                <div class="flex flex-row items-center gap-3 text-gray-600">
                    <svg viewBox="0 0 33 33" class="w-12 h-12">
                        <use href="/icons/sprite.svg?v=2#llaveEnMano"></use>
                    </svg>
                    <h3 class="text-xl font-semibold">Llave en mano</h3>
                </div>
                <!--Modelo Habitat-->
                <a href="/modelos/habitat" class="flex items-center justify-between pt-6 mt-2 pb-4 border-b border-gray-200 hover:bg-gray-100">
                    <div class="flex flex-col">
                        <h4 class="text-md font-semibold text-gray-700">Modelo HÁBITAT</h4>
                        <p class="text-sm text-gray-500">Amplitud, diseño funcional y confort de alto nivel</p>
                    </div>
                    <svg class="w-8 h-8 text-gray-500">
                        <use href="/icons/sprite.svg?v=7#flechaDerecha"></use>
                    </svg>
                </a>
                 <!--Modelo Essentia-->
                 <a href="/modelos/essentia" class="flex items-center justify-between pt-6 pb-4 border-b border-gray-200 hover:bg-gray-100">
                    <div class="flex flex-col">
                        <h4 class="text-md font-semibold text-gray-700">Modelo ESSENTIA</h4>
                        <p class="text-sm text-gray-500">Calidad, diseño y rápidez</p>
                    </div>
                    <svg class="w-8 h-8 text-gray-500">
                        <use href="/icons/sprite.svg?v=7#flechaDerecha"></use>
                    </svg>
                </a>
                <!--Modelo Nativa-->
                 <a href="/modelos/nativa" class="flex items-center justify-between pt-6 pb-4 border-b border-gray-200 hover:bg-gray-100">
                    <div class="flex flex-col">
                        <h4 class="text-md font-semibold text-gray-700">Modelo NATIVA</h4>
                        <p class="text-sm text-gray-500">Funcional, cercano, simple pero con identidad</p>
                    </div>
                    <svg class="w-8 h-8 text-gray-500">
                        <use href="/icons/sprite.svg?v=7#flechaDerecha"></use>
                    </svg>
                </a>
            </div>

            <!--Diseño personalizado -->
            <div class="proyectos-a-medida pt-20">
                <div class="flex flex-row items-center gap-3 text-gray-600">
                    <svg viewBox="0 0 33 33" class="w-6 h-6">
                        <use href="/icons/sprite.svg#construccion-icon" fill="#545151"></use>
                    </svg>
                    <h3 class="text-lg font-semibold">Diseño personalizado</h3>
                </div>
                <!--Modelo proyectos a medida-->
                <a href="/proyectos-a-medida" class="flex items-center justify-between pt-6 mt-2 pb-4 border-b border-gray-200 hover:bg-gray-100">
                    <div class="flex flex-col">
                        <h4 class="text-md font-semibold text-gray-700">Proyectos a medida</h4>
                        <p class="text-sm text-gray-500">Diseñamos juntos el proyecto que tenes pensado</p>
                    </div>
                    <svg class="w-8 h-8 text-gray-500">
                        <use href="/icons/sprite.svg?v=7#flechaDerecha"></use>
                    </svg>
                </a>
            </div>
            
        </div>
    </div>
</section>
