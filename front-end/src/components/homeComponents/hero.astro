---
import Whatsappicon from "@/components/whatsappicon.astro";
import VideoHome from "@/components/homeComponents/videoHome.astro";
---

<section class="relative w-full h-[730px]">
  <VideoHome />
  <div
    class="relative z-10 h-full flex flex-col justify-center gap-4 px-6 md:px-12 text-white"
  >
    <div class="flex flex-col gap-5 pt-10 px-40">
      <div>
        <h1
          class="text-4xl md:text-5xl font-bold leading-tight drop-shadow-2xl"
        >
          Construcción <br />
          con Steel Frame: <br />
          Rápido, eficiente <br />
          y sustentable
        </h1>
      </div>
      <div class="text-lg md:text-md max-w-md leading-[1.7] drop-shadow-lg">
        <strong>Construí</strong> la casa, comercio o <br />
        desarrollo industrial que imaginás <br />
        <strong
          >con tecnología de vanguardia <br />
          y materiales de primera calidad.</strong
        >
      </div>
    </div>
    <button
      class="mt-2 w-48 rounded-lg bg-white/80 ml-40 px-6 py-3 text-sm font-medium text-black hover:bg-orange-700 hover:text-white focus:outline-none focus:ring-4 focus:ring-orange-300"
      type="button"
    >
      Ver servicios
    </button>
  </div>
  <Whatsappicon />
</section>
