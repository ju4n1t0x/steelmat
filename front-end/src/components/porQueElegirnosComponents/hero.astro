---
import { Picture } from "astro:assets";
import PorQueElegirnosImage from "@/assets/por-que-elegirnos/por-que-elegirnos.webp";
---

<section class="relative w-full h-[550px] sm:h-[650px] md:h-[730px]">
  <Picture
    src={PorQueElegirnosImage}
    alt="Por que elegirnos"
    formats={['avif', 'webp']}
    class="absolute inset-0 w-full h-full object-cover -z-10"
    loading="eager"
    fetchpriority="high"
    widths={[640, 750, 828, 1080, 1200, 1920]}
    sizes="100vw"
    quality={75}
    width={1920}
    height={730}
  />
  <div
    class="relative z-10 h-full flex flex-col justify-center px-14 text-white"
  >
    <div class="flex flex-col gap-5 md:px-20">
      <h1
        class="text-lg sm:text-2xl md:text-3xl lg:text-4xl xl:text-5xl font-bold leading-tight"
      >
        Te acompa√±amos para que construir
      </h1>
      <h1
        class="text-lg sm:text-2xl md:text-3xl lg:text-4xl xl:text-5xl font-bold leading-tight"
      >
        sea una buena experiencia.
      </h1>
    </div>
  </div>
</section>
