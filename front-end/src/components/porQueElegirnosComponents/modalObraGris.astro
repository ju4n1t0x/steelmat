---
import CarrouselModalObraGris from "./carrousels/carrouselModalObraGris.astro";
---

<div
  id="static-modal"
  data-modal-backdrop="static"
  tabindex="-1"
  aria-hidden="true"
  class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50
        justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full"
>
  <div class="relative flex flex-col p-6 w-full max-w-6xl max-h-[100%]">
    <!-- Modal content -->
    <div class="relative bg-gray-700 shadow-sm dark:bg-white pb-10">
      <!-- Modal header -->
      <div
        class="flex
          items-center
          justify-between
          p-4
          md:p-5
          border-b
          rounded-t
          dark:border-gray-500
          border-gray-300"
      >
        <button
          type="button"
          class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white"
          data-modal-hide="static-modal"
        >
          <svg
            class="w-3 h-3"
            aria-hidden="true"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 14 14"
          >
            <path
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"></path>
          </svg>
          <span class="sr-only">Close modal</span>
        </button>
      </div>

      <div class="flex flex-col md:flex-row w-full">
        <div class="p-2 lg:p-4 md:p-5 space-y-4 w-full md:w-2/3">
          <div
            class="relative w-full"
            style="aspect-ratio: 16/9;"
            data-carousel="static"
          >
            <CarrouselModalObraGris />
          </div>
        </div>
        <div
          class="flex flex-col w-full md:w-1/3 p-2 lg:p-4 md:p-5 border-t border-gray-200 rounded-b dark:border-gray-600"
        >
          <div class="flex-grow"></div>
          <div class="mt-auto">
            <p class="text-gray-700 text-lg">Obra Gris</p>
            <p class="text-gray-700 text-lg">Casa Galvez</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
