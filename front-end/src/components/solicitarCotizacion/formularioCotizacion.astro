---
import Whatsappicon from "../whatsappicon.astro";
---

<section
  class="relative w-full min-h-screen flex flex-row justify-center pt-32 pb-20"
>
  <div class="flex flex-col justify-center align-center text-[#545151]">
    <h1 class="text-6xl font-extrabold leading-tight text-center">
      Completá el fomulario, <br />
      nosotros te contactamos
    </h1>
    <h2 class="text-2xl leading-tight text-center pt-5">
      Nuestros asesores se comunicarán con vos a la brevedad.
    </h2>

    <form
      id="form-cotizacion"
      class="w-full max-w-[1400px] mx-auto flex flex-col md:flex-row flex-wrap pt-20"
    >
      <div class="mb-6 flex-1 min-w-[40%] px-40">
        <div class="mb-8">
          <label
            for="nombreApellido"
            class="block mb-2 text-md font-medium text-gray-900 dark:text-[#545151]"
            >Nombre y Apellido</label
          >
          <input
            type="text"
            id="nombreApellido"
            name="nombreApellido"
            class="bg-transparent hover:bg-gray-300/50 border-0 border-b border-gray-300 text-gray-900 text-sm focus:ring-0 focus:border-gray-500 block w-full p-2.5 dark:border-gray-600 dark:placeholder-gray-400 dark:text-black dark:focus:border-gray-500 transition-colors duration-200"
            placeholder="Juan Pérez"
            required
          />
        </div>
        <div class="mb-8">
          <label
            for="email"
            class="block mb-2 text-md font-medium text-gray-900 dark:text-[#545151]"
            >E-mail</label
          >
          <input
            type="email"
            id="email"
            name="email"
            class="bg-transparent hover:bg-gray-300/50 border-0 border-b border-gray-300 text-gray-900 text-sm focus:ring-0 focus:border-gray-500 block w-full p-2.5 dark:border-gray-600 dark:placeholder-gray-400 dark:text-black dark:focus:border-gray-500 transition-colors duration-200"
            placeholder="usuario@ejemplo.com"
            required
          />
        </div>

        <div class="mb-8">
          <label
            for="telefono"
            class="block mb-2 text-md font-medium text-gray-900 dark:text-[#545151]"
            >Teléfono</label
          >
          <input
            type="tel"
            id="telefono"
            name="telefono"
            class="bg-transparent hover:bg-gray-300/50 border-0 border-b border-gray-300 text-gray-900 text-sm focus:ring-0 focus:border-gray-500 block w-full p-2.5 dark:border-gray-600 dark:placeholder-gray-400 dark:text-black dark:focus:border-gray-500 transition-colors duration-200"
            placeholder="(123) 456-7890"
            required
          />
        </div>
        <div class="mb-8">
          <label
            for="ubicacion"
            class="block mb-2 text-md font-medium text-gray-900 dark:text-[#545151]"
            >Ciudad, Provincia</label
          >
          <input
            type="text"
            id="ubicacion"
            name="ubicacion"
            class="bg-transparent hover:bg-gray-300/50 border-0 border-b border-gray-300 text-gray-900 text-sm focus:ring-0 focus:border-gray-500 block w-full p-2.5 dark:border-gray-600 dark:placeholder-gray-400 dark:text-black dark:focus:border-gray-500 transition-colors duration-200"
            placeholder="Córdoba, Córdoba"
            required
          />
        </div>
      </div>
      <div class="mb-6 flex-1 min-w-[40%] px-40">
        <fieldset class="mb-8">
          <legend
            class="block mb-8 text-md font-medium text-gray-900 dark:text-[#545151]"
            >¿Tenés terreno para tu casa?</legend
          >
          <div class="flex gap-10">
            <!-- Opción SÍ -->
            <div class="flex items-center gap-3">
              <label
                for="terreno-si"
                class="text-sm font-medium text-gray-900 dark:text-[#545151]"
                >Sí</label
              >
              <input
                id="terreno-si"
                type="radio"
                value="si"
                name="terreno"
                class="w-4 h-4 text-orange-500 bg-transparent border-gray-300 focus:ring-orange-500 dark:focus:ring-orange-600 focus:ring-2"
              />
            </div>

            <!-- Opción NO -->
            <div class="flex items-center gap-3">
              <label
                for="terreno-no"
                class="text-sm font-medium text-gray-900 dark:text-[#545151]"
                >No</label
              >
              <input
                id="terreno-no"
                type="radio"
                value="no"
                name="terreno"
                class="w-4 h-4 text-orange-500 bg-transparent border-gray-300 focus:ring-orange-500 dark:focus:ring-orange-600 focus:ring-2"
              />
            </div>
          </div>
        </fieldset>
        <div class="mb-8">
          <label
            for="metros"
            class="block mb-2 text-md font-medium text-gray-900 dark:text-[#545151]"
            >¿Cuántos metros querés para tu casa?</label
          >
          <input
            type="text"
            id="metros"
            name="metros"
            class="bg-transparent hover:bg-gray-300/50 border-0 border-b border-gray-300 text-gray-900 text-sm focus:ring-0 focus:border-gray-500 block w-full p-2.5 dark:border-gray-600 dark:placeholder-gray-400 dark:text-black dark:focus:border-gray-500 transition-colors duration-200"
            placeholder="60, 120, etc"
            required
          />
        </div>
        <fieldset class="mb-8">
          <legend
            class="block mb-8 text-md font-medium text-gray-900 dark:text-[#545151]"
            >¿Tenés proyecto de arquitectura?</legend
          >
          <div class="flex gap-10">
            <!-- Opción SÍ -->
            <div class="flex items-center gap-3">
              <label
                for="proyecto-si"
                class="text-sm font-medium text-gray-900 dark:text-[#545151]"
                >Sí</label
              >
              <input
                id="proyecto-si"
                type="radio"
                value="si"
                name="proyecto"
                class="w-4 h-4 text-orange-500 bg-transparent border-gray-300 focus:ring-orange-500 dark:focus:ring-orange-600 focus:ring-2"
              />
            </div>

            <!-- Opción NO -->
            <div class="flex items-center gap-3">
              <label
                for="proyecto-no"
                class="text-sm font-medium text-gray-900 dark:text-[#545151]"
                >No</label
              >
              <input
                id="proyecto-no"
                type="radio"
                value="no"
                name="proyecto"
                class="w-4 h-4 text-orange-500 bg-transparent border-gray-300 focus:ring-orange-500 dark:focus:ring-orange-600 focus:ring-2"
              />
            </div>
          </div>
        </fieldset>

        <div class="mb-8">
          <label
            for="comentarios"
            class="block mb-2 text-md font-medium text-gray-900 dark:text-[#545151]"
            >Comentarios</label
          >
          <input
            type="text"
            id="comentarios"
            name="comentarios"
            class="bg-transparent hover:bg-gray-300/50 border-0 border-b border-gray-300 text-gray-900 text-sm focus:ring-0 focus:border-gray-500 block w-full p-2.5 dark:border-gray-600 dark:placeholder-gray-400 dark:text-black dark:focus:border-gray-500 transition-colors duration-200"
            placeholder="Comentarios adicionales"
          />
        </div>
      </div>
      <div class="basis-full flex justify-center mb-8 pt-8">
        <button
          id="btn-submit-cotizacion"
          type="submit"
          class="text-white bg-orange-500 hover:bg-orange-600 focus:ring-4 focus:outline-none focus:ring-orange-300 font-medium rounded-lg text-lg w-full sm:w-auto px-12 py-2 text-center dark:bg-orange-500 dark:hover:bg-orange-700 dark:focus:ring-orange-600"
          >Enviar</button
        >
      </div>
    </form>
  </div>
</section>

<script>
  import { FormHandler } from "../../utils/formHandler.js";
  import { cotizacionSchema } from "../../utils/validationSchemas.js";
  import { EMAIL_CONFIG } from "../../utils/emailConfig.js";

  // Inicializar el manejador de formularios cuando el DOM esté listo
  document.addEventListener("DOMContentLoaded", () => {
    const formHandler = new FormHandler({
      publicKey: EMAIL_CONFIG.publicKey,
      serviceId: EMAIL_CONFIG.serviceId,
      templateId: EMAIL_CONFIG.templates.cotizacion,
    });

    formHandler.setupForm("form-cotizacion", cotizacionSchema, {
      type: "cotizacion",
      successMessage:
        "¡Gracias! Tu solicitud de cotización ha sido enviada. Nos contactaremos pronto.",
      errorMessage:
        "Hubo un error al enviar el formulario. Por favor, intentá nuevamente.",
    });
  });
</script>
