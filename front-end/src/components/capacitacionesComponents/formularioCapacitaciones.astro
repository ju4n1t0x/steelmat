---
import Whatsappicon from "../whatsappicon.astro";
---

<section class="relative w-full h-[100vh] flex flex-row justify-center pt-10">
  <div class="flex flex-col justify-center align-center text-[#545151]">
    <h1 class="text-6xl font-extrabold leading-tight text-center">
      Dejanos tus datos, nosotros <br />
      nos comunicamos con vos
    </h1>
    <h2 class="text-2xl leading-tight text-center pt-5">
      Te enviamos información sobre <br />
      nuevas capacitaciones
    </h2>

    <form class="w-lg mx-auto pt-15">
      <div class="mb-8">
        <label
          for="email"
          class="block mb-2 text-md font-medium text-gray-900 dark:text-[#545151]"
          >Nombre y Apellido*</label
        >
        <input
          type="email"
          id="email"
          class="bg-transparent hover:bg-gray-300/50 border-0 border-b border-gray-300 text-gray-900 text-sm focus:ring-0 focus:border-gray-500 block w-full p-2.5 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:border-gray-500 transition-colors duration-200"
          placeholder="name@flowbite.com"
          required
        />
      </div>
      <div class="mb-8">
        <label
          for="email"
          class="block mb-2 text-md font-medium text-gray-900 dark:text-[#545151]"
          >E-mail</label
        >
        <input
          type="email"
          id="email"
          class="bg-transparent hover:bg-gray-300/50 border-0 border-b border-gray-300 text-gray-900 text-sm focus:ring-0 focus:border-gray-500 block w-full p-2.5 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:border-gray-500 transition-colors duration-200"
          placeholder="user@user.com"
          required
        />
      </div>

      <div class="mb-8">
        <label
          for="telefono"
          class="block mb-2 text-md font-medium text-gray-900 dark:text-[#545151]"
          >Teléfono*</label
        >
        <input
          type="tel"
          id="telefono"
          class="bg-transparent hover:bg-gray-300/50 border-0 border-b border-gray-300 text-gray-900 text-sm focus:ring-0 focus:border-gray-500 block w-full p-2.5 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:border-gray-500 transition-colors duration-200"
          placeholder="(123) 456-7890"
          required
        />
      </div>

      <div class="flex justify-center mb-8">
        <button
          type="submit"
          class="text-white bg-orange-500 hover:bg-orange-600 focus:ring-4 focus:outline-none focus:ring-orange-300 font-medium rounded-lg text-lg w-full sm:w-auto px-12 py-2 text-center dark:bg-orange-500 dark:hover:bg-orange-700 dark:focus:ring-orange-600"
          >Enviar</button
        >
      </div>
    </form>
  </div>
</section>
