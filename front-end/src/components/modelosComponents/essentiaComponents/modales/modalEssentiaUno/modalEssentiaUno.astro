---
import CarrouselEssentia from "@/components/modelosComponents/essentiaComponents/modales/modalEssentiaUno/carrouselEssentiaUno.astro";
---

<script>
  const imageTexts = [
    "Fachada",
    "Cocina",
    "Baño",
    "Dormitorio",
    "Contrafachada",
    "Sala de estar",
    "Sala de estar",
  ];

  function updateText(index: number) {
    const textEl = document.getElementById("image-text-essentia-1-1");
    if (!textEl) {
      console.warn("Essentia 1.1: Element #image-text-essentia-1-1 not found");
      return;
    }
    console.log(
      `Essentia 1.1: Actualizando texto a índice ${index}: ${imageTexts[index]}`
    );
    textEl.textContent = imageTexts[index];
  }

  // Escuchar cambios de imagen
  document.addEventListener("essentia-1-1:image-change", (e: Event) => {
    console.log("Essentia 1.1: Evento essentia-1-1:image-change recibido", e);
    const customEvent = e as CustomEvent<{ index: number }>;
    const index = customEvent.detail?.index;
    if (typeof index !== "number") {
      console.warn("Essentia 1.1: Index no es un número", index);
      return;
    }
    updateText(index);
  });

  // Establecer texto inicial cuando se abre el modal
  document.addEventListener("DOMContentLoaded", () => {
    console.log("Essentia 1.1: DOMContentLoaded");
    const modal = document.getElementById("modal-essentia-1-1");
    if (!modal) {
      console.warn("Essentia 1.1: Modal #modal-essentia-1-1 not found");
      return;
    }

    // Observer para detectar cuando el modal se muestra/oculta
    const observer = new MutationObserver(() => {
      if (!modal.classList.contains("hidden")) {
        // Modal abierto - siempre mostrar texto del índice 0
        console.log("Essentia 1.1: Modal abierto, reseteando a índice 0");
        updateText(0);
      }
    });

    observer.observe(modal, { attributes: true, attributeFilter: ["class"] });
  });
</script>

<div
  id="modal-essentia-1-1"
  data-modal-backdrop="static"
  tabindex="-1"
  aria-hidden="true"
  class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50
         justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full"
>
  <div class="relative flex flex-col p-6 w-full max-w-6xl max-h-[100%]">
    <div class="relative bg-gray-700 shadow-sm dark:bg-white pb-10">
      <!-- Header -->
      <div
        class="flex items-center justify-between p-4 md:p-5 border-b border-gray-300"
      >
        <button
          type="button"
          class="text-gray-400 hover:bg-gray-200 hover:text-gray-900 rounded-lg w-8 h-8 inline-flex justify-center items-center"
          data-modal-hide="modal-essentia-1-1"
        >
          ✕
        </button>
      </div>

      <!-- Body -->
      <div class="flex w-full">
        <div class="p-4 md:p-5 w-2/3">
          <div
            class="relative w-full"
            style="aspect-ratio: 16/9;"
            data-carousel="static"
          >
            <CarrouselEssentia />
          </div>
        </div>

        <div class="flex flex-col w-1/3 p-4 md:p-5 border-t border-gray-200">
          <div class="flex-grow"></div>
          <div class="mt-auto">
            <p class="text-gray-700 text-lg">ESSENTIA 1.1</p>
            <p
              id="image-text-essentia-1-1"
              class="text-gray-700 text-lg font-semibold"
            >
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
