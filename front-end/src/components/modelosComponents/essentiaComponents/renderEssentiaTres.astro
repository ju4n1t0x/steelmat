---
import { Picture } from "astro:assets";
import RenderEssentiaImage from "@/assets/modelos/essentia/render-essentia-3.webp";
import ModalEssentiaTres from "./modales/modalEssentiaTres/modalEssentiaTres.astro";
---

<section
  class="w-full mx-auto
    grid grid-cols-1 md:grid-cols-2
    gap-6 md:gap-10
    items-center
    py-15 md:py-20
    px-6 md:px-20 lg:px-40"
>
  <!-- Título y texto - order-1 en todas las resoluciones -->
  <article class="flex flex-col gap-5 order-1 md:order-1 max-w-md">
    <div class="flex flex-col items-start">
      <span class="text-2xl md:text-2xl lg:text-3xl text-gray-500 pb-5"
        >Opción</span
      >
      <h2 class="text-2xl md:text-2xl lg:text-3xl text-gray-700 font-bold">
        <strong>Modelo ESSENTIA 1.3</strong>
      </h2>
    </div>
    <div>
      <div class="pt-3 lg:pt-10">
        <p
          class="text-md leading-[1.7] text-justify tracking-wide text-gray-700"
        >
          <strong>Essentia 1.2</strong> (Cocina comedor, Sala de estar, Baño, 2 Dormitorios,
          Cochera) <strong>+ ampliacion sala de estar + galeria externa.</strong
          >
        </p>
      </div>
      <div class="pt-3 lg:pt-10">
        <span class="text-gray-800 font-bold">Precio: Consultar</span>
      </div>
    </div>
    <!-- Botón - solo visible en md+ (dentro del artículo) -->
    <div class="hidden md:flex items-center pt-3 lg:pt-10 gap-5">
      <button
        type="button"
        class="bg-gray-300/50 text-gray-700 focus:outline-none
          hover:bg-gray-200/50 focus:ring-3 focus:ring-gray-300 font-medium rounded-lg text-sm
          px-5 py-2.5 flex items-center gap-2"
        data-modal-target="modal-essentia-1-3"
        data-modal-toggle="modal-essentia-1-3"
      >
        Ver renders
        <svg class="w-5 h-5 text-gray-700">
          <use href="/icons/sprite.svg#flecha-icon"></use>
        </svg>
      </button>
    </div>
  </article>

  <!-- Imagen - order-2 en todas las resoluciones -->
  <aside class="w-full order-2 md:order-2">
    <Picture src={RenderEssentiaImage} alt="Essentia" formats={['avif', 'webp']} class="w-full h-auto" />
  </aside>

  <!-- Botón - solo visible en < md (después de la imagen, alineado izquierda) -->
  <div class="flex md:hidden items-start order-3 pt-2">
    <button
      type="button"
      class="bg-gray-300/50 text-gray-700 focus:outline-none
        hover:bg-gray-200/50 focus:ring-3 focus:ring-gray-300 font-medium rounded-lg text-sm
        px-5 py-2.5 flex items-center gap-2"
      data-modal-target="modal-essentia-1-3"
      data-modal-toggle="modal-essentia-1-3"
    >
      Ver renders
      <svg class="w-5 h-5 text-gray-700">
        <use href="/icons/sprite.svg#flecha-icon"></use>
      </svg>
    </button>
  </div>

  <ModalEssentiaTres />
  <script>
    // Pre-cargar el módulo del carrusel
    const carouselModulePromise = import("../../../utils/script-carrousel.js");
    let carouselModule: Awaited<typeof carouselModulePromise> | null = null;

    // Cargar módulo inmediatamente en background
    carouselModulePromise.then((mod) => {
      carouselModule = mod;
    });

    // Cada vez que se abre el modal, reinicializar el carrusel
    document.addEventListener("mousedown", async (e) => {
      const target = e.target as Element;
      if (!target) return;

      const button = target.closest('[data-modal-target="modal-essentia-1-3"]');

      if (button) {
        console.log("[Essentia 1.3] Inicializando/reiniciando carrusel...");
        if (!carouselModule) {
          carouselModule = await carouselModulePromise;
        }
        carouselModule.initCarouselSync({
          carouselId: "essentia-1-3",
          totalItems: 6,
          eventName: "essentia-1-3:image-change",
        });
        console.log("[Essentia 1.3] Carrusel listo!");
      }
    });
  </script>
</section>
