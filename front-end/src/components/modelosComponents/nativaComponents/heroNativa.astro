---
import { Image } from "astro:assets";
import NativaImage from "@/assets/modelos/nativa/nativa-hero.webp";
---

<section class="relative w-full mt-18 h-[calc(730px-6rem)]">
  <Image
    src={NativaImage}
    alt="Nativa"
    class="absolute inset-0 w-full h-full -z-10 brightness-45"
    loading="eager"
  />
  <div
    class="relative z-10 h-full flex flex-col justify-center items-center text-white"
  >
    <div class="flex flex-col justify-center items-center">
      <h1 class="text-[8rem] xl:text-[8rem] font brightness-93 tracking-[2rem]">
        NATIVA
      </h1>
      <h2 class="xl:text-2xl max-w-xl">
        LA FUNCIONALIDAD DE UN HOGAR, HECHO SIMPLE
      </h2>
    </div>
  </div>
</section>
