---
import { Image } from "astro:assets";
import RenderHabitatImage from "@/assets/modelos/habitat/render-habitat.webp";
import ModalHabitat from "@/components/modelosComponents/habitatComponents/modal/modalHabitat.astro";
---

<section
  class="w-full mx-auto min-h-[50vh] md:min-h-screen
    grid grid-cols-1 md:grid-cols-2
    gap-6 md:gap-10
    items-center
    py-10 md:py-20
    px-6 md:px-20 lg:px-40"
>
  <!-- Título y texto - order-1 en todas las resoluciones -->
  <article class="flex flex-col gap-5 order-1 md:order-1 max-w-md">
    <div class="flex flex-col items-start">
      <h2 class="text-2xl md:text-3xl lg:text-4xl text-gray-700 font-bold">
        <strong>Modelo HÁBITAT 1.1</strong>
      </h2>
    </div>
    <div>
      <div class="pt-5 md:pt-10">
        <p class="text-md leading-[1.7] text-justify tracking-wide">
          <ul class="text-gray-700">Cocina Comedor</ul>
          <ul class="text-gray-700">Sala de estar</ul>
          <ul class="text-gray-700">Baño (1)</ul>
          <ul class="text-gray-700">Dormitorio (1)</ul>
          <ul class="text-gray-700">Cochera</ul>
        </p>
      </div>
      <div class="pt-5 md:pt-10">
        <span class="text-gray-800 font-bold">Precio: Consultar</span>
      </div>
    </div>
    <!-- Botón - solo visible en md+ (dentro del artículo) -->
    <div class="hidden md:flex items-center pt-5 md:pt-10 gap-5">
      <button
        type="button"
        class="bg-gray-300/50 text-gray-700 focus:outline-none
          hover:bg-gray-200/50 focus:ring-3 focus:ring-gray-300 font-medium rounded-lg text-sm
          px-5 py-2.5 flex items-center gap-2"
        data-modal-target="static-modal"
        data-modal-toggle="static-modal"
      >
        Ver renders
        <svg class="w-5 h-5 text-gray-700">
          <use href="/icons/sprite.svg#flecha-icon"></use>
        </svg>
      </button>
    </div>
  </article>

  <!-- Imagen - order-2 en todas las resoluciones -->
  <aside class="w-full order-2 md:order-2">
    <Image src={RenderHabitatImage} alt="Habitat" class="w-full h-auto" />
  </aside>

  <!-- Botón - solo visible en < md (después de la imagen, alineado izquierda) -->
  <div class="flex md:hidden items-start order-3 pt-2">
    <button
      type="button"
      class="bg-gray-300/50 text-gray-700 focus:outline-none
        hover:bg-gray-200/50 focus:ring-3 focus:ring-gray-300 font-medium rounded-lg text-sm
        px-5 py-2.5 flex items-center gap-2"
      data-modal-target="static-modal"
      data-modal-toggle="static-modal"
    >
      Ver renders
      <svg class="w-5 h-5 text-gray-700">
        <use href="/icons/sprite.svg#flecha-icon"></use>
      </svg>
    </button>
  </div>

  <ModalHabitat />
  <script>
    // Pre-cargar el módulo del carrusel
    const carouselModulePromise = import("../../../utils/script-carrousel.js");
    let carouselModule: Awaited<typeof carouselModulePromise> | null = null;

    // Cargar módulo inmediatamente en background
    carouselModulePromise.then((mod) => {
      carouselModule = mod;
    });

    // Cada vez que se abre el modal, reinicializar el carrusel
    document.addEventListener("mousedown", async (e) => {
      const target = e.target as Element;
      if (!target) return;

      const button = target.closest('[data-modal-target="static-modal"]');

      if (button) {
        console.log("[Habitat] Inicializando/reiniciando carrusel...");
        if (!carouselModule) {
          carouselModule = await carouselModulePromise;
        }
        carouselModule.initCarouselSync({
          carouselId: "habitat-1-1",
          totalItems: 3,
          eventName: "habitat:image-change",
        });
        console.log("[Habitat] Carrusel listo!");
      }
    });
  </script>
</section>
