---
import { Image } from "astro:assets";
import HabitatImage from "@/assets/modelos/habitat/habitat-hero.webp";
---

<section class="relative w-full mt-16 h-[550px] sm:h-[650px] md:h-[730px]">
  <Image
    src={HabitatImage}
    alt="Habitat"
    class="absolute inset-0 w-full h-full object-cover -z-10 brightness-65"
    loading="eager"
    fetchpriority="high"
    widths={[640, 750, 828, 1080, 1200, 1920]}
    sizes="100vw"
    quality={75}
    width={1920}
    height={730}
  />
  <div
    class="relative z-10 h-full flex flex-col justify-center items-center text-white"
  >
    <div class="flex flex-col justify-center items-center">
      <h1
        class="text-[2rem] sm:text-[4rem] md:text-[6rem] xl:text-[8rem] font-bold sm:font-normal brightness-93 tracking-[2rem]"
      >
        HÁBITAT
      </h1>
      <h2 class="xl:text-2xl max-w-xl sm:text-md md:text-xl">
        Espacio para crecer, diseño para vivir.
      </h2>
    </div>
  </div>
</section>
