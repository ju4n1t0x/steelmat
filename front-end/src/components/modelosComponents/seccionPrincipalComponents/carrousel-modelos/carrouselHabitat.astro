---
import { Image } from "astro:assets";
import Habitat1 from "@/assets/modelos/habitat/habitat-portada.webp";
import Habitat2 from "@/assets/modelos/habitat/habitat-1.webp";
import Habitat3 from "@/assets/modelos/habitat/habitat-2.webp";
import Habitat4 from "@/assets/modelos/habitat/habitat-3.webp";
import Carrousel from "@/components/carrouselComponents.astro";

const items = [
  {
    src: Habitat1,
    alt: "Habitat 1",
  },
  {
    src: Habitat2,
    alt: "Habitat 2",
  },
  {
    src: Habitat3,
    alt: "Habitat 3",
  },
  {
    src: Habitat4,
    alt: "Habitat 4",
  },
];
---

<Carrousel
  items={items}
  outerClass="relative overflow-hidden  mt-10"
  containerClass="relative overflow-hidden "
  width="100%"
  aspectRatio="16/9"
  interval={3000}
  showControls={false}
  initialIndex={0}
/>
