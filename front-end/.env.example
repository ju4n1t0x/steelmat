# Your Public Key (formerly User ID) - found in Account section
PUBLIC_EMAILJS_PUBLIC_KEY=your_public_key_here

# Your Service ID - the email service you configured (Gmail, Outlook, etc.)
PUBLIC_EMAILJS_SERVICE_ID=your_service_id_here

# Template ID for the quote/cotizaci√≥n form
